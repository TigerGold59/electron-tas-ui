{
  "compilerOptions": {
    "allowJs": true,
    "removeComments": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
